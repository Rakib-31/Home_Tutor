<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="5"
    android:orientation="vertical"
    android:background="@drawable/backgroundpic"
    tools:context="com.example.asus_pc.home_tutor.MathPractice">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:textSize="30dp"
            android:textColor="#252323"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/ScoreNumberId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#252323"
            android:textSize="30dp"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong: "
            android:textSize="30dp"
            android:textColor="#252323"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/WrongNumberId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#252323"
            android:textSize="30dp"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/FirstNumberTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="140dp"
            android:textColor="#212113"
            />

        <TextView
            android:id="@+id/SymbolTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="140dp"
            android:textColor="#212113"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/SecondNumberTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="140dp"
            android:textColor="#212113"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/FirstButtonId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp"
            />

        <Button
            android:id="@+id/SecondButtonId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            />


        <Button
            android:id="@+id/ThirdButtonId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>



</LinearLayout>
